---
import { Image }            from "astro:assets";
import Badge                from "./Badge.astro";


interface Props {
	title       : string;
    description : string;
    img         : any;
    live        : string;
    github      : string;
    tags        : Array<string>;
}

const { title, description, github, live, img, tags } = Astro.props;
---

<article class="border rounded-xl overflow-hidden flex flex-wrap my-5 hover:scale-[1.01] transition duration-300">
    <Image src={img} alt={`img ${title}`} class="md:w-1/3 w-full border-r" width="960" height="720"/>
    <div class="flex flex-wrap md:w-2/3 w-full md:ps-3">
        <h5 class="text-2xl py-5 px-2 md:py-0 md:pt-5 font-semibold w-full uppercase">
            {title}
        </h5>
        <p class="p-2 py-3 text-md">{description}</p>
        <div class="flex p-2 items-center w-full py-3">
            <a href={github} target="_blank" class="flex uppercase underline">
                <svg class="mr-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"/></svg>
                Github
            </a>
            <a href={live} target="_blank" class="flex uppercase mx-3 underline">
                <svg class="mr-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M15.728 3.884c1.434-1.44 3.532-1.47 4.694-.304c1.164 1.168 1.132 3.28-.303 4.72l-2.424 2.433a.75.75 0 0 0 1.063 1.059l2.424-2.433c1.91-1.919 2.15-4.982.303-6.838c-1.85-1.857-4.907-1.615-6.82.304L9.818 7.692c-1.912 1.919-2.152 4.982-.303 6.837a.75.75 0 1 0 1.062-1.058c-1.163-1.168-1.132-3.28.303-4.72z"/><path fill="currentColor" d="M14.485 9.47a.75.75 0 0 0-1.063 1.06c1.164 1.168 1.132 3.279-.303 4.72L8.27 20.116c-1.434 1.44-3.532 1.47-4.694.304c-1.163-1.168-1.132-3.28.303-4.72l2.424-2.433a.75.75 0 1 0-1.062-1.059l-2.424 2.433C.906 16.56.666 19.623 2.515 21.48c1.85 1.858 4.907 1.615 6.819-.304l4.848-4.867c1.91-1.918 2.15-4.982.303-6.837" opacity=".5"/></svg>
                Link
            </a>
            <!-- <Button href={live}>Demo</Button> -->
        </div>
        <div class="flex flex-wrap p-2 items-center">
            {tags.map((item) => {
                return (<Badge>{item}</Badge>)
            })}
        </div>
    </div>
</article>