            Experiencia
        </Title>
        <ul class="w-full flex flex-wrap pt-16 md:pl-12">
            {experience.map(({title, description, company, tags}, key) => {
                return (<ExperienceItem title={title} description={description} company={company} tags={tags} last={(experience.length - 1) === key}></ExperienceItem>);
            })}
        </ul>
    </Section>
    <Section class="md:px-20 py-10">        
        <Title>
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2em" height="1.2em" class="mr-2" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-width="1.5"><path d="M4 8c0-2.828 0-4.243.879-5.121C5.757 2 7.172 2 10 2h4c2.828 0 4.243 0 5.121.879C20 3.757 20 5.172 20 8v8c0 2.828 0 4.243-.879 5.121C18.243 22 16.828 22 14 22h-4c-2.828 0-4.243 0-5.121-.879C4 20.243 4 18.828 4 16z"/><path d="M19.898 16h-12c-.93 0-1.395 0-1.777.102A3 3 0 0 0 4 18.224"/><path stroke-linecap="round" d="M8 7h8m-8 3.5h5m6.5 8.5H8"/></g></svg>
            Certificaciones
        </Title>
        <section class="w-full pt-10">
            {certificate.map(({title, description, url, img, tags}, key) => {
                return (<CertificateItem title={title} description={description} url={url} img={img} tags={tags}></CertificateItem>);
            })}
        </section>
    </Section>
    <Section class="md:px-20">
        <Title>
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2em" height="1.2em" class="mr-2" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-width="1.5"><path d="M2 12c0-4.714 0-7.071 1.464-8.536C4.93 2 7.286 2 12 2s7.071 0 8.535 1.464C22 4.93 22 7.286 22 12s0 7.071-1.465 8.535C19.072 22 16.714 22 12 22s-7.071 0-8.536-1.465C2 19.072 2 16.714 2 12Z"/><path stroke-linecap="round" d="M17 15h-5m-5-5l.234.195c1.282 1.068 1.923 1.602 1.923 2.305s-.64 1.237-1.923 2.305L7 15"/></g></svg>
            Proyectos
        </Title>
        <section class="w-full py-10">
            {proyect.map(({title, description, github, live, img, tags}, key) => {
                return(
                    <ProyectItem title={title} description={description} github={github} live={live} img={img} tags={tags}></ProyectItem>
                );
            })}
        </section>
    </Section>
</Layout>
